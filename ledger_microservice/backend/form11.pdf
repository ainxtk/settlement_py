version: '3.1'
services:
  app:
    build: .
    ports:
      - 5000:5000
    container_name: backend-v2
    depends_on:
      - db
    entrypoint: ["python", "manage.py", "runserver"]
  db:
    image: postgres:10.3
    restart: always
    container_name: local1-postgres110.3
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
      POSTGRES_DB: testdb
    ports:
      - 5434:5434
